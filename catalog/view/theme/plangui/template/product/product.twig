{{ header }}


<div class="product-page">
  <div class="container">
      <div class="row">
          <div class="col-lg-4 offset-lg-1"> 
            {% if thumb or images %}
              <div class="product-carousel-for">
                {% if thumb %}
                  <div class="product-carousel-for_item">
                      <img src="{{ thumb }}" alt="{{ heading_title }}">
                  </div>
                  {% endif %}
                  {% if images %}
                  {% for image in images %}
                  <div class="product-carousel-for_item">
                      <img src="{{ image.thumb }}" alt="">
                  </div>
                  {% endfor %}
                {% endif %}
                </div>
            {% endif %}
          </div>
          <div class="col-lg-7">
              <div class="product-card-content">
                  <h1>{{ heading_title }}</h1>
                  <p>
                    {{ description }}
                  </p>
                  <div class="value-block">
                      <div class="amount">
                          <span class="small-title">{{ entry_qty }}</span>
                          <div class="amount-block">
                              <span class="amount_ctrl" id="minus">-</span>
                              <input type="text" name="quantity" value="1" size="2" id="input-quantity" class="form-control amount_input">
                              <input type="hidden" name="product_id" value="75">   
                              <span class="amount_ctrl" id="plus">+</span>
                          </div>
                      </div>

                      <div class="options">
                          <span class="small-title small-title_left">Объем</span>
                          <div class="select-block">
                              <div class="select-block_icon">
                                  <svg width="10" height="7" viewBox="0 0 10 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                                      <path d="M4.53125 6.26953C4.72461 6.46289 5.04688 6.46289 5.24023 6.26953L9.42969 2.10156C9.62305 1.88672 9.62305 1.56445 9.42969 1.37109L8.93555 0.876953C8.74219 0.683594 8.41992 0.683594 8.20508 0.876953L4.875 4.18555L1.56641 0.876953C1.35156 0.683594 1.0293 0.683594 0.835938 0.876953L0.341797 1.37109C0.148438 1.56445 0.148438 1.88672 0.341797 2.10156L4.53125 6.26953Z" fill="#2D2D2D"/>
